{
  "name": "@sgawarat/remark-aozora-ruby",
  "type": "module",
  "version": "0.1.0",
  "description": "A remark plugin to add support for Aozora Bunko-style ruby (annotation) syntax, like `｜base《ruby》`.",
  "main": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "files": [
    "./dist/src",
    "!*.tsbuildinfo"
  ],
  "scripts": {
    "build": "tsgo",
    "test": "vitest run",
    "lint": "biome lint .",
    "format": "biome format .",
    "lint:write": "biome lint --write .",
    "format:write": "biome format --write ."
  },
  "keywords": [
    "markdown",
    "remark",
    "remark-plugin",
    "ruby"
  ],
  "author": "sgawarat",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^2.3.6",
    "@types/node": "^24.10.1",
    "@typescript/native-preview": "7.0.0-dev.20251026.1",
    "micromark": "^4.0.2",
    "remark": "^15.0.1",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@types/mdast": "^4.0.4",
    "mdast-util-from-markdown": "^2.0.2",
    "mdast-util-to-string": "^4.0.0",
    "micromark-util-symbol": "^2.0.1",
    "micromark-util-types": "^2.0.2",
    "unified": "^11.0.5"
  }
}
